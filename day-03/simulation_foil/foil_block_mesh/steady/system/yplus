Description
    Calculates the turbulence y+, outputting the data as a yPlus field.

\*---------------------------------------------------------------------------*/

type            yPlus;
libs            ("libfieldFunctionObjects.so");

useWallFunction  true;
executeControl  writeTime;
writeControl    writeTime;

writePrecision   10;
writeToFile      true;

